@{
    var cartItemCount = ViewBag.CartItemCount ?? 0;
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">The Coffee House</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>
        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item @(currentAction == "Index" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item @(currentAction == "Menu" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Menu" class="nav-link">Menu</a>
                </li>
                <li class="nav-item @(currentAction == "Services" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Services" class="nav-link">Services</a>
                </li>
                <li class="nav-item @(currentAction == "Blog" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Blog" class="nav-link">Blog</a>
                </li>
                <li class="nav-item @(currentAction == "About" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                </li>
                <li class="nav-item @(currentAction == "Contact" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
                </li>
                <li class="nav-item cart @(currentAction == "Cart" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Cart" class="nav-link">
                        <span class="icon icon-shopping_cart"></span>
                        <span class="bag d-flex justify-content-center align-items-center"><small>@cartItemCount</small></span>
                    </a>
                </li>
                <li class="nav-item cart @(currentAction == "Login" && currentController == "Home" ? "active" : "")">
                    <a asp-controller="Home" asp-action="Login" class="nav-link">
                        <span class="icon icon-user"></span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

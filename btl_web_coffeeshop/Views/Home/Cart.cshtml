    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>
        function checkout() {
            Swal.fire("Checkout", "Thank you for your order!", "success").then(() => {
                // Xóa các sản phẩm trong giỏ hàng
                clearCart();
            });
        }

        function clearCart() {
            $.ajax({
                url: '@Url.Action("ClearCart", "Cart")',
                type: 'POST',
                success: function (result) {
                    // Reload the page to reflect the empty cart
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error('Error clearing the cart:', error);
                }
            });
        }

        function createNewCart() {
            // Logic để tạo giỏ hàng mới
            console.log('New cart created');
        }
    </script>

    <script>
        document.getElementById('proceedToCheckout').addEventListener('click', function (event) {
            event.preventDefault();
            Swal.fire({
                icon: "question",
                title: "Checkout",
                text: "Do you have an account or you want to checkout without login?",
                showDenyButton: true,
                showCancelButton: true,
                denyButtonColor: "#3085d6",
                confirmButtonText: "Login",
                denyButtonText: `Checkout without login`
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Auth/Login";
                } else if (result.isDenied) {
                    Swal.fire({
                        title: 'Checkout Form',
                        html: `
                            <input type="text" id="name" class="swal2-input" placeholder="Name">
                            <input type="email" id="email" class="swal2-input" placeholder="Email">
                            <input type="text" id="address" class="swal2-input" placeholder="Address">
                            <input type="text" id="phone" class="swal2-input" placeholder="Phone">
                        `,
                        focusConfirm: false,
                        preConfirm: () => {
                            const name = Swal.getPopup().querySelector('#name').value;
                            const email = Swal.getPopup().querySelector('#email').value;
                            const address = Swal.getPopup().querySelector('#address').value;
                            const phone = Swal.getPopup().querySelector('#phone').value;
                            if (!name || !email || !address || !phone) {
                                Swal.showValidationMessage(`Please enter all fields`);
                            }
                            return { name: name, email: email, address: address, phone: phone };
                        }
                    }).then((result) => {
                        if (result.isConfirmed) {
                            checkout();
                        }
                    });
                }
            });
        });
    </script>


    <script>
        $(document).ready(function () {
            $('.remove-from-cart').click(function (e) {
                e.preventDefault();
                var cartItemId = $(this).data('id');
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "Cart", new { area = "Admin" })',
                    type: 'POST',
                    data: { cartItemId: cartItemId },
                    success: function (result) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred while removing the item from the cart.');
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('.quantity').on('change', function () {
                var cartItemId = $(this).data('id');
                var quantity = $(this).val();

                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart", new { area = "Admin" })',
                    type: 'POST',
                    data: { cartItemId: cartItemId, quantity: quantity },
                    success: function (result) {
                        location.reload();
                    },
                });
            });
        });
    </script>


}
